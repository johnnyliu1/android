<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- things to scroll -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:paddingBottom="50dp">

            <ImageView
                android:id="@+id/foodIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingTop="35dp"
                app:srcCompat="@drawable/ic_fastfood_48px" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:paddingTop="45dp"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="28sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtNutrition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/titleNut"
                android:textColor="@android:color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/lblIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:paddingLeft="24dp"
                android:text="@string/hintIngredients"
                android:textColor="@android:color/black"
                android:textSize="28dp"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="308dp" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="650dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/lblIngredients"
            tools:layout_editor_absoluteX="12dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txtKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_weight="2"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="97dp"
                    tools:layout_editor_absoluteY="196dp" />

                <TextView
                    android:id="@+id/lblKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/hintCal"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TextView"
                    android:textColor="@android:color/black"

                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="247dp"
                    tools:layout_editor_absoluteY="308dp" />

                <TextView
                    android:id="@+id/lblProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"

                    android:text="@string/hintPro"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtCarbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="103dp"
                    tools:layout_editor_absoluteY="270dp" />

                <TextView
                    android:id="@+id/lblCarbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/hintCarbs"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtSodium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="110dp"
                    tools:layout_editor_absoluteY="361dp" />

                <TextView
                    android:id="@+id/lblSodium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/hintSodium"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="TextView"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    tools:layout_editor_absoluteX="280dp"
                    tools:layout_editor_absoluteY="194dp" />

                <TextView
                    android:id="@+id/lblSugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="@string/hintSugar"
                    android:textColor="@android:color/black" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:padding="12dp"
            android:text="TextView"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="308dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/hintInstruction"
                android:textColor="@android:color/white"
                android:textSize="28dp"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="308dp" />

            <TextView
                android:id="@+id/txtInstruction"
                android:textSize="20dp"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="247dp"
                tools:layout_editor_absoluteY="308dp" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>